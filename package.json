{
  "name": "dojo2-stateful",
  "version": "0.0.2-pre",
  "description": "Small stateful lib for working with Dojo 2 widgets",
  "engines": {
    "npm": ">=3.0.0"
  },
  "private": true,
  "homepage": "http://dojo.io",
  "bugs": {
    "url": "https://github.com/dojo/dojo2-stateful/issues"
  },
  "license": "BSD-3-Clause",
  "main": "index.js",
  "repository": {
    "type": "git",
    "url": "https://github.com/dojo/dojo2-stateful.git"
  },
  "scripts": {
    "precommit": "lint-staged",
    "prettier": "prettier --write 'src/**/*.ts' 'tests/**/*.ts'",
    "test": "grunt test"
  },
  "dependencies": {
    "@dojo/core": "~0.4.0",
    "@dojo/has": "~0.1.2",
    "@dojo/i18n": "~0.5.1",
    "@dojo/shim": "~0.2.6",
    "@dojo/widget-core": "~0.9.6"
  },
  "devDependencies": {
    "@dojo/loader": "~0.1.1",
    "@types/glob": "5.0.*",
    "@types/grunt": "0.4.*",
    "@types/sinon": "~4.1.2",
    "codecov.io": "0.1.6",
    "grunt": "~1.0.1",
    "grunt-dojo2": "~0.1.3",
    "grunt-tslint": "5.0.1",
    "husky": "0.14.3",
    "intern": "~4.1.0",
    "lint-staged": "6.0.0",
    "sinon": "^1.17.6",
    "tslint": "5.8.0",
    "typescript": "~2.6.1"
  },
  "lint-staged": {
    "*.{ts,tsx}": [
      "prettier --write",
      "git add"
    ]
  },
  "prettier": {
    "singleQuote": true,
    "tabWidth": 4,
    "useTabs": true,
    "parser": "typescript",
    "printWidth": 120,
    "arrowParens": "always"
  }
}
